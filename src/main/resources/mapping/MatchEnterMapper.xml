<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.young.sys.badminton.dao.MatchEnterMapper">
    <resultMap id="BaseResultMap" type="com.young.sys.badminton.domain.MatchEnter">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="match_id" property="matchId" jdbcType="INTEGER"/>
        <result column="nick" property="nick" jdbcType="VARCHAR"/>
        <result column="sex" property="sex" jdbcType="INTEGER"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="match_type" property="matchType" jdbcType="INTEGER"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
    </resultMap>

    <select id="selectByMatchId" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select *
        from match_enter
        where status = 1 and match_id = #{matchId}
        order by id desc
    </select>

    <insert id="insert" parameterType="com.young.sys.badminton.domain.MatchEnter">
        insert into match_enter (match_id, nick,
                                 sex, phone, match_type)
        values (#{matchId,jdbcType=INTEGER}, #{nick,jdbcType=VARCHAR},
                #{sex,jdbcType=INTEGER}, #{phone,jdbcType=VARCHAR}, #{matchType,jdbcType=INTEGER})
    </insert>

    <update id="deleteById" parameterType="java.lang.Integer">
        update match_enter
        set status = -1
        where id = #{id,jdbcType=INTEGER}
    </update>
</mapper>